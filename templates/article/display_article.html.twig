{% extends 'base.html.twig' %}
{% block title %}{{ article.title }}{% endblock %}
{% block content %}
<div class="db-panel db-twothird">
  <div class="db-panel db-card">
    <div class="db-title">{{ article.title }}</div>
    <div class="db-subtitle">{{ article.datetime|format_date() }}</div>
    <div class="db-panel">{{ article.body }}</div>
    <li>
      {% for tag in article.tags %}
        <p class="db-tag-label">{{ tag.tag.name }}</p>
      {% endfor %}
    </li>
  </div>
  <div class="db-panel db-card">
    <div class="db-subtitle">{{ article.user.username }}</div>
  </div>
</div>
<div class="db-third db-panel">
  {% include('comment/comment_layout.html.twig') %}
  {% include('comment/comment_form.html.twig') %}
</div>
{% endblock content %}
