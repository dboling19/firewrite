{% extends 'base.html.twig' %}
{% block title %}{{ article.title }}{% endblock %}
{% block content %}
<div class="db-wrapper db-container db-panel db-twothird">
  <div class="db-panel db-card">
    <div>
      <div class="db-title">{{ article.title }}</div>
      <span class="db-subtitle">{{ article.rating }}</span>
      <span>{{ include('comment/rating_widget.html.twig') }}</span>
    </div>
    <div class="db-subtitle">{{ article.datetime|format_date() }}</div>
    <p>{{ article.body }}</p>
    <li>
      {% for tag in article.tags %}
        <p class="db-tag-label">{{ tag.tag.name }}</p>
      {% endfor %}
    </li>
  </div>
  {{ include('user/profile_preview.html.twig') }}
</div>
<div class="db-wrapper db-container db-third db-panel">
  {% include('comment/comment_layout.html.twig') %}
  {% include('comment/comment_form.html.twig') %}
</div>
{% endblock content %}
