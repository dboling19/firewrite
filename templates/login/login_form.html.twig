{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
{% if error %}
  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('app_login') }}" method="post" class="db-form db-panel db-border db-middle db-round">
  <p>
    <label for="username">
      Email
      <input type="text" id="username" name="_username" value="{{ last_username }}" class="db-input" required>
    </label>
  </p>
  <p>
    <label for="password">
      Password
      <input type="password" id="password" name="_password" class="db-input" required>
    </label>
  </p>
    {# If you want to control the URL the user is redirected to on success
    <input type="hidden" name="_target_path" value="/account"> #}
  <p>
    <button type="submit" class="db-button">Login</button>
    <a href="{{ path('app_register') }}" style="font-size:10px;">Register Here</a>
  </p>
</form>
{% endblock %}